<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".RPSActivity"
    android:id="@+id/RPSLayout">

    <TextView
        android:text="Welcome to Rock Paper Scissors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginLeft="100px"
        android:layout_marginTop="100px"
        android:id="@+id/playerChoice"
        />
    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginLeft="500px"
        android:layout_marginTop="100px"
        android:id="@+id/compChoice"
        />
    <TextView
        android:layout_width="200px"
        android:layout_height="50px"
        android:layout_marginLeft="100px"
        android:layout_marginTop="50px"
        android:text="Player's Choice"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:layout_marginLeft="500px"
        android:layout_marginTop="50px"
        android:text="Android's Choice"/>

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginLeft="275px"
        android:layout_marginTop="400px"
        android:id="@+id/paper"
        />
    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginTop="400px"
        android:layout_marginLeft="25px"
        android:id="@+id/rock"
        />
    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginLeft="525px"
        android:layout_marginTop="400px"
        android:id="@+id/scissor"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="650px"
        android:text="Result"
        android:id="@+id/result"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_marginTop="850px"
        android:text="Change Difficulty"
        android:onClick="settingsClicked"
        android:id="@+id/settings"
        />

    <TextView
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:text="Wins"
        android:id="@+id/textView"
        android:layout_below="@+id/result"
        android:layout_marginLeft="50px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/wins"
        android:layout_alignTop="@+id/textView"
        android:layout_marginLeft="150px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Losses"
        android:id="@+id/textView5"
        android:layout_below="@+id/result"
        android:layout_toEndOf="@+id/playerChoice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/losses"
        android:layout_below="@+id/result"
        android:layout_toEndOf="@+id/result" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ties:"
        android:id="@+id/textView7"
        android:layout_below="@+id/result"
        android:layout_alignStart="@+id/scissor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/ties"
        android:layout_marginTop="700px"
        android:layout_marginLeft="600px"/>

</RelativeLayout>
